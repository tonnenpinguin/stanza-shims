{
    "compilerOptions": {
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "lib": ["dom", "es2020"],
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./dist",
        "strict": true,
        "target": "es2020",
        "noImplicitAny": true,
        "noUnusedParameters": true,
        "strictFunctionTypes": true,
        "alwaysStrict": true,
        "baseUrl": "./",
        "skipLibCheck": true
    },
    "exclude": ["dist", "node_modules"]
}